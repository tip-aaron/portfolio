---
import siteData from "@/data/siteData.json";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
  <h1>Aaron Ragudos</h1>
  <div>
    <span>
      {
        siteData.socialLinks.map((link) => (
          <span>
            <a
              class="link"
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.name}
            </a>{" "}
            |
          </span>
        ))
      }
    </span>
    <span> me@aaronragudos.website </span>
  </div>
  <style>
    div {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    h1,
    div {
      text-align: center;
    }
  </style>
</MainLayout>
